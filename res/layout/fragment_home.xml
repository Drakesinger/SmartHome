<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DisplayMessageActivity" >
	
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Porte"
        android:layout_marginBottom="18dp"
        android:hint="@string/title_activity_display_message"
        android:text="@string/Welcome" />
    
    <Button
        android:id="@+id/Note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Chauffage"
        android:layout_centerVertical="true"
        android:onClick="NotesMainActivity"
        android:text="@string/BouttonNote"
        android:width="164dp" />

    <Button
        android:id="@+id/Porte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Chauffage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:onClick="DoorMainActivity"
        android:text="@string/BouttonPorte"
        android:width="164dp" />

    <Button
        android:id="@+id/Chauffage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Note"
        android:layout_alignLeft="@+id/Porte"
        android:layout_marginBottom="21dp"
        android:onClick="HeatMainActivity"
        android:text="@string/BouttonChauffage"
        android:width="164dp" />


    <Button
        android:id="@+id/Alarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Note"
        android:layout_below="@+id/Note"
        android:layout_marginTop="13dp"
        android:onClick="AlarmMainActivity"
        android:text="@string/BouttonAlarme"
        android:width="164dp" />
    
    <Button
        android:id="@+id/BluetoothTester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Note"
        android:layout_below="@+id/Note"
        android:layout_marginTop="80dp"
        android:onClick="OnTesteLeBluetoothMagueule"
        android:text="@string/hello_world"
        android:width="164dp" />

</RelativeLayout>