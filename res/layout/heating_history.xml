<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/heating_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif"
        android:text="@string/history"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/heating_history_title_indoor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:background="@color/blue01"
        android:text="@string/indoor" />

    <ListView
        android:id="@+id/listview_history_indoor"
        android:layout_width="match_parent"
        android:layout_height="200dip" >
    </ListView>
    <TextView
        android:id="@+id/heating_history_title_outdoor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:background="@color/blue01"
        android:text="@string/outdoor" />
    <ListView
        android:id="@+id/listview_history_outdoor"
        android:layout_width="match_parent"
        android:layout_height="200dip" >
    </ListView>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnShowGraphicalView"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showGraphicalView"
            android:text="@string/show_graphical_view" />
    </LinearLayout>

</LinearLayout>