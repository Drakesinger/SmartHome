<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <TextView
        android:id="@+id/scheduling_list_item_temp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:textSize="30sp"
        android:text="@string/item_temp" />

    <TextView
        android:id="@+id/scheduling_list_item_date"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/scheduling_list_item_temp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/item_date"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/scheduling_list_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/scheduling_list_item_date"
        android:layout_alignLeft="@+id/scheduling_list_item_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="@string/item_name"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/scheduling_list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/scheduling_list_item_name" />

</RelativeLayout> 