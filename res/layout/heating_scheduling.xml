<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/heating_scheduling_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue01"
        android:text="@string/schedulings"
        android:textColor="@android:color/background_light" />

    <ListView
        android:id="@+id/listViewScheduling"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.66" >
    </ListView>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnAddHeating"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:onClick="addSchedulingDialog"
            android:text="@string/add" />

        <Button
            android:id="@+id/btnDeleteSelected"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:onClick="deleteSelection"
            android:text="@string/delete_selection" />
    </LinearLayout>

</LinearLayout>