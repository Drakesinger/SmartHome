<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
         android:id="@+id/heating_main_list_icon"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginRight="8dp"
         android:src="@drawable/ic_action_cancel"
         />

    <TextView
        android:id="@+id/heating_main_list_title"
        style="@style/title"
        android:layout_width="200dp"
         android:layout_toRightOf="@+id/heating_main_list_icon"
        android:layout_height="wrap_content"
        android:textColor="@color/blue08"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/heating_main_list_desc"
        style="@style/subtitle"
        android:layout_width="match_parent"
        android:layout_above="@+id/heating_main_list_title"
        android:layout_height="wrap_content"
        android:gravity="fill" />

</RelativeLayout>